@using LibreriaSofttek.Models.Enums
@using LibreriaSofttek.Helpers
@model List<LibreriaSofttek.DTOs.LibroDetailDTO>

<div class="container-fluid">
    <div class="row w-100 mb-3">
        <div class="col-md-12 mb-3">
            <h2 class="mb-3">Lista de libros</h2>
            @if (Model.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Título</th>
                            <th scope="col">Género</th>
                            <th scope="col">Autor</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var libro in Model)
                        {
                            <tr>
                                <td scope="row">@libro.Titulo (@libro.Ano.ToString())</td>
                                <td>@(((GeneroEnum)libro.Genero).GetDisplayName())</td>
                                <td scope="row">@libro.NombreAutor</td>
                                <td scope="row">
                                    @Html.ActionLink("Ver detalle", "Detail", new { id = libro.Id }, new { @class = "btn btn-outline-primary btn-sm ms-2 mb-2" })
                                    @Html.ActionLink("Editar", "Update", new { id = libro.Id }, new { @class = "btn btn-outline-primary btn-sm ms-2 mb-2" })
                                    <button class="btn btn-outline-danger btn-sm btn-delete ms-2 mb-2" data-id="@libro.Id">Eliminar</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No hay libros registrados.</p>
            }
        </div>
    </div>
    <div class="row w-100 mb-3">
        <div class="d-flex justify-content-end">
            <a href="@Url.Action("Create", "Libro")" class="btn btn-outline-primary">Crear</a>
        </div>
    </div>
</div>

<script src="~/Scripts/Libro/Index.js"></script>